{
  "compilerOptions": {
    "lib": ["ES2022", "DOM.Iterable", "DOM"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,
    "strict": true,
    "jsx": "preserve"
  },
  "exclude": [
    "postcss.config.js",
    "tailwind.config.js"
  ]
}
